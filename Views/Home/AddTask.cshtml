@{
    ViewData["Title"] = "Add/Edit a Task";
}

@model Project6.Models.TaskInputModel

<h1>Fill out the form to add/edit a task</h1><br />

<div>
    <form method="post" class="border">
        <br />
        <label asp-for="Task">Task:</label>
        <input asp-for="Task" /><br />

        <label asp-for="DueDate">Due date:</label>
        <input asp-for="DueDate" /><br />

        <label asp-for="QuadrantId">Quadrant:</label>
        <input asp-for="Quadrant" /><br />


        @*<label asp-for="Category">Category:</label>
        <select asp-for="Category">
            <option value="home">Home</option>
            <option value="school">School</option>
            <option value="work">Work</option>
            <option value="church">Church</option>
        </select><br />*@

        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Major</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select><br />

        <label asp-for="Completed"></label>
        <select asp-for="Completed">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <button type="submit">Add Task</button>
    </form>
</div>